{
  "permissions": {
    "allow": [
      "Grep",
      "Bash(pnpm *)",
      "Bash(gh *)",
      "Bash(git add *)",
      "Bash(git commit *)",
      "Bash(git push *)",
      "Bash(ls *)",
      "Bash(rg *)",
      "WebFetch(domain:notion.so)"
    ]
  },
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "nice -n 20 afplay $HOME/.claude/hooks/battlecruiser.caf &"
          },
          {
            "type": "command",
            "command": "$HOME/.claude/hooks/iterm-tab-reset.sh &"
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "nice -n 20 afplay $HOME/.claude/hooks/mariocoin.caf &"
          },
          {
            "type": "command",
            "command": "$HOME/.claude/hooks/iterm-tab-reset.sh &"
          }
        ]
      }
    ],
    "Notification": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "nice -n 20 afplay $HOME/.claude/hooks/wololo.caf &"
          },
          {
            "type": "command",
            "command": "$HOME/.claude/hooks/iterm-tab-attention.sh &"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "nice -n 20 afplay $HOME/.claude/hooks/zugzug.caf &"
          },
          {
            "type": "command",
            "command": "$HOME/.claude/hooks/iterm-tab-attention.sh &"
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "nice -n 20 afplay $HOME/.claude/hooks/PeonYesAttack3.caf &"
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "nice -n 20 afplay $HOME/.claude/hooks/orc.caf &"
          },
          {
            "type": "command",
            "command": "$HOME/.claude/hooks/iterm-tab-reset.sh &"
          }
        ]
      }
    ]
  }
}
